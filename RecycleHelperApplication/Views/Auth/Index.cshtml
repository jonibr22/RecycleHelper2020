@model RecycleHelperApplication.ViewModels.Auth.IndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SuperLayout.cshtml";
}
<div style="width: 50%;margin:0 auto">
    <h2>Login</h2>
    <hr />
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { enctype = "multipart/form-data", id = "form_login" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="control-label">
                <b>Username<span class="red-text">*</span></b>
            </div>
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control input-sm" } })
            <span class="red-text">
                @Html.ValidationMessageFor(model => model.Username)
            </span>
        </div>
        <div class="form-group">
            <div class="control-label">
                <b>Password<span class="red-text">*</span></b>
            </div>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input-sm", @type = "password" } })
            <span class="red-text">
                @Html.ValidationMessageFor(model => model.Password)
            </span>
        </div>
        <div class="form-group">
            <input type="submit" value="SUBMIT" class="btn btn-primary" />
        </div>
    }

    <div>
        <span>Don't have an account? </span>@Html.ActionLink("Sign Up","Registration","Auth")
    </div>
</div>


